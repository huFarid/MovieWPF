<UserControl x:Class="MovieWPF.UserControls.UcImageWithBorder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MovieWPF.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="100">
    <Border  Tag="{Binding Path=Value}"  Style="{StaticResource BorderStyle}">
        <Border.Background>
            <ImageBrush ImageSource="{Binding Path=Source}" Stretch="Fill" ></ImageBrush>
            
        </Border.Background>
    </Border>
   
</UserControl>
